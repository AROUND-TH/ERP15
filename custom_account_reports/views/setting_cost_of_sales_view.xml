<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="view_psetting_cost_of_sale_form" model="ir.ui.view">
            <field name="name">setting.cost.sales.form</field>
            <field name="model">setting.cost.sales</field>
            <field name="arch" type="xml">
                <form string="Setting Cost Of Sales Report">
                    <sheet>
                        <div class="oe_title">
                            <h1>
                                <field name="name"/>
                            </h1>
                        </div>
                        <group>
                            <field name="group_account_inventories_start_ids" widget="many2many_tags" options="{'no_create_edit': True}"/>
                            <field name="group_account_inventories_end_ids" widget="many2many_tags" options="{'no_create_edit': True}"/>
                            <field name="group_account_finished_goods_ids" widget="many2many_tags" options="{'no_create_edit': True}"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="view_psetting_cost_of_sale_tree" model="ir.ui.view">
            <field name="name">setting.cost.sales.tree</field>
            <field name="model">setting.cost.sales</field>
            <field name="arch" type="xml">
                <tree string="Setting Cost Of Sales Report">
                    <field name="name"/>
                    <field name="group_account_inventories_start_ids" widget="many2many_tags"/>
                    <field name="group_account_inventories_end_ids" widget="many2many_tags"/>
                    <field name="group_account_finished_goods_ids" widget="many2many_tags"/>
                </tree>
            </field>
        </record>

        <record id="setting_cost_of_sale_action" model="ir.actions.act_window">
            <field name="name">Setting Cost Of Sales Report</field>
            <field name="res_model">setting.cost.sales</field>
            <field name="type">ir.actions.act_window</field>
            <field name="view_mode">tree,form</field>
            <field name="view_id" ref="view_psetting_cost_of_sale_tree"/>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Setting Cost Of Sales Report not found. Let's create one!
                </p><p>
                    'Setting Cost Of Sales Report' allow you config group account for report.
                </p>
            </field>

        </record>

        <menuitem id="menu_setting_cost_of_sale_action"
            action="setting_cost_of_sale_action" name="ต้นทุนขาย"
            parent="custom_account_reports.menu_configuration_account_report" sequence="2"/>
    </data>
</odoo>
