        <record id="action_production_cost_report" model="ir.actions.client">
            <field name="name">Production Cost Report</field>
            <field name="tag">account_report</field>
            <field name="context" eval="{'model': 'production.cost.report'}" />
        </record>

        <menuitem id="menu_production_cost_report" name="งบต้นทุนผลิต"
            parent="account.account_reports_legal_statements_menu"
