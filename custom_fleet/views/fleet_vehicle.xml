<?xml version="1.0" encoding="utf-8" ?>
<odoo>

    <record id="fleet_vehicle_view_form" model="ir.ui.view">
        <field name="name">fleet.vehicle.form.inherit</field>
        <field name="model">fleet.vehicle</field>
        <field name="inherit_id" ref="fleet.fleet_vehicle_view_form"/>
        <field name="arch" type="xml">
            <field name="license_plate" position="attributes">
                <attribute name="force_save">1</attribute>
                <attribute name="readonly">1</attribute>
            </field>

            <label for="tag_ids" position="replace"/>
            <field name="tag_ids" position="replace"/>
            <xpath expr="//group[1]" position="before">
                <group col="4">
                    <field name="tag_ids" string="Model Tags" widget="many2many_tags" options="{'color_field': 'color', 'no_create_edit': True}"/>
                    <field name="is_vehicle_used"/>
                </group>
            </xpath>
        </field>
    </record>
    <record id="fleet_vehicle_view_form_manager" model="ir.ui.view">
        <field name="name">fleet.vehicle.form.inherit_manager</field>
        <field name="model">fleet.vehicle</field>
        <field name="inherit_id" ref="fleet_vehicle_view_form"/>
        <field name="groups_id" eval="[(6, 0, [ref('base.group_system')])]"/>
        <field name="arch" type="xml">
            <field name="license_plate" position="attributes">
                <attribute name="readonly">0</attribute>
            </field>
        </field>
    </record>

</odoo>
