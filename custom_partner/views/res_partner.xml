<?xml version="1.0" encoding="utf-8" ?>
<odoo>

    <record id="view_partner_form_priority1" model="ir.ui.view">
        <field name="name">res.partner.form.inherit_priority1</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form" />
        <field name="priority">1</field>
        <field name="arch" type="xml">
            <group name="purchase" position="inside">
                <field name="is_vendor"/>
                <field name="vendor_group_id" options="{'no_open': true}" force_save="1" attrs="{'readonly': [('vendor_group_id','!=',False)]}"/>
            </group>
        </field>
    </record>
    <record id="view_partner_form_priority1_manager" model="ir.ui.view">
        <field name="name">res.partner.form.inherit_priority1_manager</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="view_partner_form_priority1"/>
        <field name="groups_id" eval="[(6, 0, [ref('base.group_system')])]"/>
        <field name="arch" type="xml">
            <field name="vendor_group_id" position="attributes">
                <attribute name="attrs">{'readonly': False}</attribute>
            </field>
        </field>
    </record>

    <record id="view_partner_form" model="ir.ui.view">
        <field name="name">res.partner.form.inherit</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form" />
        <field name="arch" type="xml">
            <xpath expr="//group[@name='sale']/field[@name='user_id']" position="before">
                <field name="is_customer"/>
            </xpath>
            <xpath expr="//form[1]/sheet[1]/group[1]/group[2]/field[@name='function']" position="before">
                <field name="internal_code" readonly="1" force_save="1"/>
                <field name="fax"/>
            </xpath>
        </field>
    </record>
    <record id="view_partner_form_manager" model="ir.ui.view">
        <field name="name">res.partner.form.inherit_manager</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="view_partner_form" />
        <field name="groups_id" eval="[(6, 0, [ref('base.group_system')])]"/>
        <field name="arch" type="xml">
            <field name="internal_code" position="attributes">
                <attribute name="readonly">0</attribute>
            </field>
        </field>
    </record>

</odoo>
