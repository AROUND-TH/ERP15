<?xml version="1.0" encoding="utf-8" ?>
<odoo>

    <record id="view_partner_form_priority1" model="ir.ui.view">
        <field name="name">res.partner.form.inherit_priority1</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form" />
        <field name="priority">1</field>
        <field name="arch" type="xml">
            <group name="purchase" position="inside">
                <field name="is_vendor"/>
                <field name="vendor_group_id" options="{'no_open': true}"/>
            </group>
        </field>
    </record>

    <record id="view_partner_form" model="ir.ui.view">
        <field name="name">res.partner.form.inherit</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form" />
        <field name="arch" type="xml">
            <xpath expr="//group[@name='sale']/field[@name='user_id']" position="before">
                <field name="is_customer"/>
            </xpath>
            <xpath expr="//form[1]/sheet[1]/group[1]/group[2]/field[@name='function']" position="before">
                <field name="internal_code"/>
                <field name="fax"/>
            </xpath>
        </field>
    </record>

</odoo>
