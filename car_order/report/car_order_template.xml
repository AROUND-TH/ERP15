<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="car_order_report_template">
        <style>
            .border-bottom-black {
                border-bottom: 1px solid;
            }
        </style>
        <t t-foreach="docs" t-as="doc">
            <t t-call="web.html_container">
                <div class="page mx-5">
                    <t t-set="partner_id" t-value="doc.partner_id"/>
                    <t t-set="vehicle_id" t-value="doc.product_id.product_tmpl_id.custom_vehicle_id"/>
                    <h3 class="my-3 text-center">รายละเอียดการขายรถยนต์</h3>
                    <div class="row col-12 d-inline-flex">
                        <div class="col-1">ชื่อผู้ซื้อ</div>
                        <div class="col-11"><p t-field="partner_id.name" class="border-bottom-black pl-2"/></div>
                        <div class="col-1">ที่อยู่</div>
                        <div class="col-11">
                            <p t-field="partner_id.contact_address" class="border-bottom-black pl-2"/></div>
                        <div class="col-1">โทรศัพท์</div>
                        <div class="col-11"><p t-field="partner_id.phone" class="border-bottom-black pl-2"/></div>
                        <div class="col-4 d-inline-flex p-0">
                            <div class="col-3">รุ่นรถ</div>
                            <div class="col-9 pr-0"><p t-field="vehicle_id.model_id.name" class="border-bottom-black pl-2"/></div>
                        </div>
                        <div class="col-4 d-inline-flex p-0">
                            <div class="col-1 text-center">สี</div>
                            <div class="col-11 p-0"><p t-field="vehicle_id.color" class="border-bottom-black pl-2"/></div>
                        </div>
                        <div class="col-4 d-inline-flex p-0">
                            <div class="col-2 text-center">เลขตัวถัง</div>
                            <div class="col-10 pl-0"><p t-field="vehicle_id.vin_sn" class="border-bottom-black pl-2"/></div>
                        </div>
                        <div class="col-6 d-inline-flex">
                            <div class="col-2 p-0">ราคา Price List</div>
                            <div class="col-6 pl-1 pr-0 mr-2"><p t-field="doc.pricelist_price" class="border-bottom-black pl-2"/></div>
                            <div class="col-1">
                                <span>บาท</span>
                            </div>
                        </div>
                        <div class="col-6 d-inline-flex justify-content-end">
                            <div class="col-2 text-right p-0">ราคาเปิดใบเสร็จ</div>
                            <div class="col-6 px-4"><p t-field="doc.start_price" class="border-bottom-black pl-2"/></div>
                            <div class="col-1">
                                <span>บาท</span>
                            </div>

                        </div>
                        <div class="col-6 d-inline-flex">
                            <div class="col-2 p-0">ราคาขาย</div>
                            <div class="col-6 pl-1 pr-0 mr-2"><p t-field="doc.sale_price" class="border-bottom-black pl-2"/></div>
                            <div class="col-1">
                                <span>บาท</span>
                            </div>
                        </div>
                        <div class="col-6 d-inline-flex justify-content-end">
                            <div class="col-2 text-right p-0">เงินจอง</div>
                            <div class="col-6 px-4"><p t-field="doc.reserve_price" class="border-bottom-black pl-2"/></div>
                            <div class="col-1">
                                <span>บาท</span>
                            </div>
                        </div>
                    </div>
                    <p>รายการ</p>
                    <div class="row">
                        <t t-foreach="doc.order_line" t-as="line_id">
                            <div class="col-4">
                                <p t-field="line_id.product_id.name"/>
                            </div>
                            <div class="col-4 d-inline-flex justify-content-end">
                                <div class="col-9">
                                    <p t-field="line_id.price_company_header_1" class="border-bottom-black"/>
                                </div>
                                <div class="col-2">
                                    <p>บาท</p>
                                </div>
                            </div>
                            <div class="col-4 d-inline-flex justify-content-end">
                                <div class="col-9">
                                    <p t-field="line_id.price_company_header_2" class="border-bottom-black"/>
                                </div>
                                <div class="col-2 mr-3">
                                    <p>บาท</p>
                                </div>
                            </div>
                        </t>
                    </div>
                </div>
            </t>
        </t>
    </template>
</odoo>