<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="res_config_settings_view_form" model="ir.ui.view">
        <field name="name">CarOrder Settings</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="sale.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@data-key='sale_management']/div[1]" position="after">
                <h2>Car Order</h2>
                <div class="row mt16 o_settings_container">
                    <div class="col-12 col-lg-6 o_setting_box">
                        <div class="o_setting_right_pane">
                            <label for="car_order_commission_product_category_id" class="o_form_label"/>
                            <div class="row">
                                <div class="text-muted col-lg-8">
                                    สำหรับกำหนดว่าประเภทสินค้าเป็น Commission
                                </div>
                            </div>
                            <div class="content-group">
                                <div class="mt16">
                                    <field name="car_order_commission_product_category_id" required="1"
                                           class="o_light_label"/>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-12 col-lg-6 o_setting_box">
                        <div class="o_setting_right_pane">
                            <label for="car_order_vendor_group_car" class="o_form_label"/>
                            <div class="row">
                                <div class="text-muted col-lg-8">
                                    สำหรับกำหนด Vendor Group ที่ใช้สำหรับ การขายรถ
                                </div>
                            </div>
                            <div class="content-group">
                                <div class="mt16">
                                    <field name="car_order_vendor_group_car" required="1"
                                           class="o_light_label"/>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>

    <record id="res_config_settings_view_form_purchase" model="ir.ui.view">
        <field name="name">Purchase Settings</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="purchase.res_config_settings_view_form_purchase"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@data-key='purchase']/div[1]" position="after">
                <h2>Vendor</h2>
                <div class="row mt16 o_settings_container">
                    <div class="col-12 col-lg-6 o_setting_box">
                        <div class="o_setting_right_pane">
                            <label for="car_order_vendor_group_car" class="o_form_label"/>
                            <div class="row">
                                <div class="text-muted col-lg-8">
                                    สำหรับกำหนด Vendor Group ที่ใช้สำหรับ การขายรถ
                                </div>
                            </div>
                            <div class="content-group">
                                <div class="mt16">
                                    <field name="car_order_vendor_group_car" required="1"
                                           class="o_light_label"/>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>
