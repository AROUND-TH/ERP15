<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <data>

        <record id="paperformat_account_billing_vendor" model="report.paperformat">
            <field name="name">Paper Format Bill Acceptance</field>
            <field name="default" eval="True"/>
            <field name="format">A4</field>
            <field name="orientation">Portrait</field>
            <field name="margin_top">40</field>
            <field name="margin_bottom">25</field>
            <field name="margin_left">5</field>
            <field name="margin_right">5</field>
            <field name="header_line" eval="False"/>
            <field name="header_spacing">15</field>
            <field name="dpi">90</field>
        </record>

        <record id="report_account_billing_vendor" model="ir.actions.report">
            <field name="name">Report Bill Acceptance</field>
            <field name="model">account.billing.vendor</field>
            <field name="report_type">qweb-pdf</field>
            <field name="report_name">custom_account.account_billing_vendor</field>
            <field name="report_file">custom_account.account_billing_vendor</field>
            <field name="binding_model_id" eval="False"/>
            <field name="binding_model_id" ref="model_account_billing_vendor"/>
            <field name="binding_type">report</field>
            <field name="print_report_name">'Bill Acceptance - %s' %(object.name)</field>
            <field name="paperformat_id" ref="paperformat_account_billing_vendor"/>
        </record>

        <!-- This custom_layout_standard_account_billing use for account_billing_vendor report. -->
        <template id="custom_layout_standard_account_billing">
            <div t-attf-class="header o_company_#{company.id}_layout" t-att-style="report_header_style">
                <div class="row">
                    <div class="col-1 mb4" align="center">
                        <img t-if="company.logo" t-att-src="image_data_uri(company.logo)" style="max-height: 65px;" alt="Logo"/>
                    </div>
                    <div class="col-11" name="company_address">
                        <span t-if="company.company_details" t-field="company.company_details"></span>
                    </div>
                    <!-- <div class="col-9 text-right" style="margin-top:22px;" t-field="company.report_header" name="moto"/> -->
                </div>
                <div t-if="company.logo or company.report_header" class="row zero_min_height">
                    <div class="col-12">
                        <div style="border-bottom: 1px solid black;"/>
                    </div>
                </div>
                <!-- Remark this code to use fix header text on company_details. -->
                <!-- <div class="row" style="margin-top:-15px;">
                    <div class="col-6" name="company_vat_phone">
                        <span t-if="company.vat" t-esc="'Tax ID: {}'.format(company.vat)" style="margin-right:8px;"></span>
                        <span t-if="company.phone" t-esc="'เบอร์โทร: {}'.format(company.phone)"></span>
                    </div>
                </div> -->
            </div>

            <div t-attf-class="article o_report_layout_standard o_company_#{company.id}_layout {{  'o_layout_background' if company.layout_background in ['Geometric', 'Custom']  else  '' }}" t-attf-style="background-image: url({{ 'data:image/png;base64,%s' % company.layout_background_image.decode('utf-8') if company.layout_background_image and company.layout_background == 'Custom' else '/base/static/img/bg_background_template.jpg' if company.layout_background == 'Geometric' else ''}});" t-att-data-oe-model="o and o._name" t-att-data-oe-id="o and o.id" t-att-data-oe-lang="o and o.env.context.get('lang')">
                <div class="pt-5">
                    <!-- This div ensures that the address is not cropped by the header. -->
                    <t t-call="web.address_layout"/>
                </div>
                <t t-out="0"/>
            </div>

            <div t-attf-class="footer o_standard_footer o_company_#{company.id}_layout">
                <div class="text-center" style="border-top: 1px solid black;">
                    <ul class="list-inline mb4">
                        <div t-field="company.report_footer"/>
                    </ul>

                    <div t-if="report_type == 'pdf'" class="text-muted">
                        Page: <span class="page"/> / <span class="topage"/>
                    </div>
                </div>
            </div>
        </template>
        <!-- This custom_layout_account_billing use for account_billing_vendor report. -->
        <template id="custom_layout_account_billing">
            <t t-if="not o" t-set="o" t-value="doc"/>
            <t t-if="not company">
                <!-- Multicompany -->
                <t t-if="company_id">
                    <t t-set="company" t-value="company_id"/>
                </t>
                <t t-elif="o and 'company_id' in o and o.company_id.sudo()">
                    <t t-set="company" t-value="o.company_id.sudo()"/>
                </t>
                <t t-else="else">
                    <t t-set="company" t-value="res_company"/>
                </t>
            </t>
            <t t-call="custom_account.custom_layout_standard_account_billing"><t t-out="0"/></t>
        </template>

        <template id="account_billing_vendor_document">
            <t t-call="custom_account.custom_layout_account_billing">
                <div class="page" style="font-size: 80%;">
                    <style>
                    .rem-border-td td {
                        border: 0px;
                        vertical-align: top;
                    }
                    </style>
                    <div class="row">
                        <div class="col h2 text-center" style="margin-top:10px; margin-bottom:20px;">
                            <span><strong>ใบรับวางบิล</strong></span>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-4">
                            <span/>
                        </div>
                        <div class="col-4">
                            <span/>
                        </div>
                        <div class="col-4">
                            <span style="margin-right:32px;">เลขที่เอกสาร</span>
                            <span t-field="doc.name"/>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-4">
                            <span style="margin-left:20px; margin-right:10px;">Vendor</span>
                            <span t-field="doc.partner_id"/>
                        </div>
                        <div class="col-4">
                            <span/>
                        </div>
                        <div class="col-4">
                            <span style="margin-right:10px;">วันที่สร้างเอกสาร</span>
                            <span t-field="doc.document_date"/>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-4">
                            <!-- <span style="margin-left:20px; margin-right:18px;">ที่อยู่</span>
                            <span t-field="doc.partner_address"/> -->
                            <table class="rem-border-td" style="margin-left:20px;">
                                <tbody>
                                    <tr>
                                        <td style="width:53px;">
                                            <span>ที่อยู่</span>
                                        </td>
                                        <td>
                                            <span t-field="doc.partner_id"
                                                t-options="{'widget': 'contact', 'fields': ['address'], 'no_marker': true}"
                                            />
                                        </td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                        <div class="col-4">
                            <span/>
                        </div>
                        <div class="col-4">
                            <span style="margin-right:25px;">วันที่ถึงกำหนด</span>
                            <span t-field="doc.document_date_due"/>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col" style="margin-top:50px; margin-bottom:10px;">
                            <span></span>
                        </div>
                    </div>
                    <table class="table o_report_block_table" style="font-size: 85%;">
                        <thead>
                            <tr>
                                <th>
                                    <span>Invoice No.</span>
                                </th>
                                <th>
                                    <span>Invoice/Bill Date</span>
                                </th>
                                <th>
                                    <span>Due Date</span>
                                </th>
                                <th>
                                    <span>Untaxed Amount</span>
                                </th>
                                <th>
                                    <span>Tax</span>
                                </th>
                                <th>
                                    <span>Total</span>
                                </th>
                            </tr>
                        </thead>
                        <t t-set="sum_amount_untaxed" t-value="0"/>
                        <t t-set="sum_amount_tax" t-value="0"/>
                        <t t-set="sum_amount_total" t-value="0"/>
                        <tbody>
                            <tr t-foreach="doc.line_ids" t-as="table_line">
                                <td>
                                    <span t-field="table_line.invoice_id"/>
                                </td>
                                <td>
                                    <span t-field="table_line.invoice_date"/>
                                </td>
                                <td>
                                    <span t-field="table_line.invoice_date_due"/>
                                </td>
                                <td>
                                    <span t-field="table_line.amount_untaxed"/>
                                </td>
                                <td>
                                    <span t-field="table_line.amount_tax"/>
                                </td>
                                <td>
                                    <span t-field="table_line.amount_total"/>
                                </td>
                                <t t-set="sum_amount_untaxed" t-value="sum_amount_untaxed + table_line.amount_untaxed"/>
                                <t t-set="sum_amount_tax" t-value="sum_amount_tax + table_line.amount_tax"/>
                                <t t-set="sum_amount_total" t-value="sum_amount_total + table_line.amount_total"/>
                            </tr>
                        </tbody>
                        <tfoot>
                            <tr>
                                <th class="text-center text-margin text-size" colspan="2"/>
                                <th class="text-left text-margin" style="font-size: 110%;">
                                    <span>(ยอดรวม)</span>
                                </th>
                                <th class="text-left text-margin">
                                    <t t-esc="sum_amount_untaxed" t-options="{'widget': 'monetary', 'display_currency': doc.company_currency_id}"/>
                                </th>
                                <th class="text-left text-margin">
                                    <t t-esc="sum_amount_tax" t-options="{'widget': 'monetary', 'display_currency': doc.company_currency_id}"/>
                                </th>
                                <th class="text-left text-margin">
                                    <t t-esc="sum_amount_total" t-options="{'widget': 'monetary', 'display_currency': doc.company_currency_id}"/>
                                </th>
                            </tr>
                        </tfoot>
                    </table>
                    <style>
                    .right-bar {
                        border-right: 1px solid #dddddd;
                    }
                    </style>
                    <table class="table" style="margin-top:60px; font-size:85%; text-align:center;">
                        <thead>
                            <tr>
                                <th class="right-bar" style="font-size: 110%;">
                                    <span>รวม</span>
                                </th>
                                <th class="right-bar">
                                    <span t-field="doc.line_count"/>
                                </th>
                                <th class="right-bar" style="font-size: 110%;">
                                    <span>ฉบับ</span>
                                </th>
                                <th class="right-bar">
                                    <span t-field="doc.amount_total"/>
                                </th>
                                <th style="font-size: 110%;">
                                    (
                                    <span t-field="doc.amount_total_text"/>
                                    )
                                </th>
                            </tr>
                        </thead>
                    </table>
                    <div class="row" style="margin-top:95px; margin-bottom:0px;">
                        <div class="col-6">
                            <span style="margin-left:20px;"><strong>หมายเหตุ:</strong></span>
                        </div>
                        <div class="col-6">
                            <span style="margin-left:20px; font-size: 120%;"><strong>ในนาม "บริษัท บี ออโต้ฮาวส์ จำกัด"</strong></span>
                        </div>
                    </div>
                    <div class="row" style="margin-top:0px; margin-bottom:0px;">
                        <div class="col-6">
                            <!-- <span style="margin-left:20px;">กรุณาสั่งจ่ายเช็คลงวันที่</span> -->
                            <span class="d-block" style="margin-left:20px;" t-if="not is_html_empty(doc.narration)" t-field="doc.narration"/>
                        </div>
                        <div class="col-6">
                            <span/>
                        </div>
                    </div>
                    <div class="row" style="margin-top:125px; margin-bottom:0px;">
                        <div class="col-6">
                            <span style="margin-left:30px;">ผู้จัดทำ........................................................</span>
                        </div>
                        <div class="col-6">
                            <span style="margin-left:30px;">ผู้รับเอกสาร...................................................</span>
                        </div>
                    </div>
                    <!-- <div class="row" style="margin-top:0px; margin-bottom:0px;">
                        <div class="col-6">
                            <span style="margin-left:30px;">(...................................................................)</span>
                        </div>
                        <div class="col-6">
                            <span style="margin-left:30px;">(...................................................................)</span>
                        </div>
                    </div> -->
                    <div class="row" style="margin-top:0px; margin-bottom:0px;">
                        <div class="col-6">
                            <span style="margin-left:30px;">วันที่...........................................................</span>
                        </div>
                        <div class="col-6">
                            <span style="margin-left:30px;">วันที่...............................................................</span>
                        </div>
                    </div>
                </div>
            </t>
        </template>

        <template id="account_billing_vendor">
            <t t-call="web.html_container">
                <t t-foreach="docs" t-as="doc">
                    <t t-call="custom_account.account_billing_vendor_document"/>
                </t>
            </t>
        </template>

    </data>
</odoo>