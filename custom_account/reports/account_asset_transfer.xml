                menu="False"
        /> -->

        <template id="account_asset_transfer_document">
            <t t-call="web.basic_layout">
                <div class="page" style="font-size: 80%;">
                    <div class="row">
                        <div class="col h2 text-center" style="margin-top:80px; margin-bottom:40px;">
                            <span><strong>ใบโอนย้ายทรัพย์สิน</strong></span>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-4">
                            <span/>
                        </div>
                        <div class="col-4">
                            <span/>
                        </div>
                        <div class="col-4">
                            <span style="margin-right:10px;">เลขที่</span>
                            <span t-esc="document_number"/>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-4">
                            <span/>
                        </div>
                        <div class="col-4">
                            <span/>
                        </div>
                        <div class="col-4">
                            <span style="margin-right:10px;">ว/ด/ป</span>
                            <span t-esc="transfer.get('transfer_date', '')"/>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-4">
                            <span/>
                        </div>
                        <div class="col-4">
                            <span/>
                        </div>
                        <div class="col-4">
                            <span style="margin-right:10px;">ผู้สร้าง</span>
                            <span t-esc="create_user"/>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col" style="margin-top:50px; margin-bottom:10px;">
                            <span>รายละเอียดการโอนย้าย</span>
                        </div>
                    </div>
                    <table class="table o_report_block_table" style="font-size: 80%;">
                        <thead>
                            <tr>
                                <th>
                                    <span>รหัสทรัพย์สิน</span>
                                </th>
                                <th>
                                    <span>รายการ</span>
                                </th>
                                <th>
                                    <span>จำนวน</span>
                                </th>
                                <th>
                                    <span>แผนกที่ย้าย</span>
                                </th>
                                <th>
                                    <span>แผนกที่รับ</span>
                                </th>
                                <th>
                                    <span>วันที่ย้าย</span>
                                </th>
                                <th>
                                    <span>หมายเหตุ</span>
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td>
                                    <span t-field="doc.asset_number"/>
                                </td>
                                <td>
                                    <span t-field="doc.name"/>
                                </td>
                                <td>
                                    <span t-esc="transfer.get('quantity', 0)"/>
                                </td>
                                <td>
                                    <span t-esc="transfer.get('account_analytic_id', '')"/>
                                </td>
                                <td>
                                    <span t-esc="transfer.get('transfer_account_analytic_id', '')"/>
                                </td>
                                <td>
                                    <span t-esc="transfer.get('transfer_date', '')"/>
                                </td>
                                <td>
                                    <span></span>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                    <div class="row" style="margin-top:160px; margin-bottom:0px;">
                        <div class="col-6">
                            <span style="margin-left:20px;">ลงชื่อ................................................หัวหน้าแผนก/ผู้จัดการ</span>
                        </div>
                        <div class="col-6">
                            <span style="margin-left:10px;">ลงชื่อ................................................หัวหน้าแผนก/ผู้จัดการ</span>
                        </div>
                    </div>
                    <div class="row" style="margin-top:0px; margin-bottom:0px;">
                        <div class="col-6">
                            <span style="margin-left:50px;">(.........................................................)</span>
                        </div>
                        <div class="col-6">
                            <span style="margin-left:40px;">(.........................................................)</span>
                        </div>
                    </div>
                    <div class="row" style="margin-top:0px; margin-bottom:0px;">
                        <div class="col-6">
                            <span style="margin-left:110px;">ผู้ส่งมอบ</span>
                        </div>
                        <div class="col-6">
                            <span style="margin-left:100px;">ผู้รับมอบ</span>
                        </div>
                    </div>
                    <div class="row" style="margin-top:50px; margin-bottom:0px;">
                        <div class="col-6">
                            <span style="margin-left:20px;">ลงชื่อ................................................หัวหน้าแผนก/ผู้จัดการ</span>
                        </div>
                        <div class="col-6">
                            <span/>
                        </div>
                    </div>
                    <div class="row" style="margin-top:0px; margin-bottom:0px;">
                        <div class="col-6">
                            <span style="margin-left:50px;">(.........................................................)</span>
                        </div>
                        <div class="col-6">
                            <span/>
                        </div>
                    </div>
                    <div class="row" style="margin-top:0px; margin-bottom:0px;">
                        <div class="col-6">
                            <span style="margin-left:70px;">เจ้าหน้าที่บัญชีทรัพย์สิน</span>
                        </div>
                        <div class="col-6">
                            <span/>
                        </div>
                    </div>
                </div>
            </t>
        </template>

        <template id="account_asset_transfer">
            <t t-call="web.html_container">
                <t t-foreach="docs" t-as="doc">
                    <t t-call="custom_account.account_asset_transfer_document"/>
                </t>
            </t>
        </template>

    </data>
</odoo>