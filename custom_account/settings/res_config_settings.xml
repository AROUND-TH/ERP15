<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="sale_config_settings_view" model="ir.ui.view">
            <field name="name">Sale Config Settings</field>
            <field name="model">res.config.settings</field>
            <field name="inherit_id" ref="sale.res_config_settings_view_form"/>
            <field name="priority">30</field>
            <field name="arch" type="xml">
                <xpath expr="//div[@id='pricing_setting_container']" position="before">
                    <div class="row mt16 o_settings_container">
                        <div class="col-12 col-lg-6 o_setting_box">
                            <div class="o_setting_left_panel"/>
                            <div class="o_setting_right_pane">
                                <span class="o_form_label">The following accounts are used for default sale discount:</span>
                                <div class="content-group">
                                    <div class="row mt8">
                                        <label for="sale_discount_account_id" string="บัญชีส่วนลด" class="col-lg-5 o_light_label"/>
                                        <field name="sale_discount_account_id" required="True"/>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
