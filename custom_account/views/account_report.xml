<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="paperformat_invoice_layout_a4" model="report.paperformat">
            <field name="name">Invoice Layout A4</field>
            <field name="default" eval="False" />
            <field name="format">A4</field>
            <field name="page_height">0</field>
            <field name="page_width">0</field>
            <field name="orientation">Portrait</field>
            <field name="margin_top">0</field>
            <field name="margin_bottom">0</field>
            <field name="margin_left">0</field>
            <field name="margin_right">0</field>
            <field name="header_line" eval="False" />
            <field name="header_spacing">0</field>
            <field name="dpi">90</field>
        </record>

        <record id="account.action_report_payment_receipt" model="ir.actions.report">
            <field name="name">Payment Receipt</field>
            <field name="model">account.payment</field>
            <field name="report_type">qweb-pdf</field>
            <field name="report_name">custom_account.report_payment_receipt</field>
            <field name="report_file">custom_account.report_payment_receipt</field>
            <field name="paperformat_id" ref="base.paperformat_batch_deposit"/>
            <field name="binding_model_id" ref="account.model_account_payment"/>
            <field name="binding_type">report</field>
        </record>

        <record id="account.account_invoices_without_payment" model="ir.actions.report">
            <field name="name">Invoices without Payment</field>
            <field name="model">account.move</field>
            <field name="report_type">qweb-pdf</field>
            <field name="report_name">custom_account.report_invoice</field>
            <field name="report_file">custom_account.report_invoice</field>
            <field name="paperformat_id" ref="base.paperformat_batch_deposit"/>
            <field name="print_report_name">(object._get_report_base_filename())</field>
            <field name="attachment">(object.state == 'posted') and ((object.name or 'INV').replace('/','_')+'.pdf')</field>
            <field name="binding_model_id" ref="account.model_account_move"/>
            <field name="binding_type">report</field>
        </record>

        <record id="account.account_invoices" model="ir.actions.report">
            <field name="name">Invoices</field>
            <field name="model">account.move</field>
            <field name="report_type">qweb-pdf</field>
            <field name="report_name">custom_account.report_invoice_with_payments</field>
            <field name="report_file">custom_account.report_invoice_with_payments</field>
            <field name="paperformat_id" ref="base.paperformat_batch_deposit"/>
            <field name="print_report_name">(object._get_report_base_filename())</field>
            <field name="attachment">(object.state == 'posted') and ((object.name or 'INV').replace('/','_')+'.pdf')</field>
            <field name="binding_model_id" ref="account.model_account_move"/>
            <field name="binding_type">report</field>
            <field name="groups_id" 
                eval="[(4, ref('account.group_account_invoice')), (4, ref('account.group_account_readonly'))]"/>
        </record>

        <record id="custom_account.action_report_receipt_bill" model="ir.actions.report">
            <field name="name">Receipt Bill</field>
            <field name="model">receipt.billing.customer</field>
            <field name="report_type">qweb-pdf</field>
            <field name="report_name">custom_account.report_receipt_bill</field>
            <field name="report_file">custom_account.report_receipt_bill</field>
            <field name="paperformat_id" ref="base.paperformat_batch_deposit"/>
            <field name="binding_model_id" ref="custom_account.model_receipt_billing_customer"/>
            <field name="binding_type">report</field>
        </record>

        <record id="custom_account.action_general_journal_report" model="ir.actions.report">
            <field name="name">Journal</field>
            <field name="model">account.move</field>
            <field name="report_type">qweb-pdf</field>
            <field name="report_name">custom_account.general_journal_report</field>
            <field name="report_file">custom_account.general_journal_report</field>
            <field name="paperformat_id" ref="base.paperformat_batch_deposit"/>
            <field name="binding_model_id" ref="account.model_account_move"/>
            <field name="print_report_name">(object._get_report_journal_filename())</field>
            <field name="binding_type">report</field>
        </record>

        <record id="action_report_account_invoices_layout" model="ir.actions.report">
            <field name="name">Invoices Layout</field>
            <field name="model">account.move</field>
            <field name="report_type">qweb-pdf</field>
            <field name="report_name">custom_account.report_invoice_with_payments_layout</field>
            <field name="report_file">custom_account.report_invoice_with_payments_layout</field>
            <field name="paperformat_id" ref="paperformat_invoice_layout_a4"/>
            <field name="print_report_name">(object._get_report_base_filename())</field>
            <field name="attachment">(object.state == 'posted') and ((object.name or 'INV').replace('/','_')+'.pdf')</field>
            <field name="binding_model_id" ref="account.model_account_move"/>
            <field name="binding_type">report</field>
            <field name="groups_id" 
                eval="[(4, ref('account.group_account_invoice')), (4, ref('account.group_account_readonly'))]"/>
        </record>
    </data>
</odoo>
