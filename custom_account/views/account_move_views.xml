<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>

        <record id="view_move_form_inherit" model="ir.ui.view">
            <field name="name">account.move.form.inherit</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_move_form"/>
            <field name="arch" type="xml">
                <xpath expr="//label[@for='invoice_payment_term_id']" position="replace">
                    <label for="invoice_payment_term_id" string="Trems"
                        attrs="{'invisible': [('move_type', 'not in', ('out_invoice', 'out_refund', 'in_invoice', 'in_refund', 'out_receipt', 'in_receipt'))]}"/>
                </xpath>

                <xpath expr="//group[1]//group[2]//div[2]" position="replace">
                    <div class="d-flex" attrs="{'invisible': [('move_type', 'not in', ('out_invoice', 'out_refund', 'in_invoice', 'in_refund', 'out_receipt', 'in_receipt'))]}">
                        <field name="invoice_payment_term_id"
                                placeholder="Terms"/>
                    </div>
                </xpath>

                <xpath expr="//group[1]//group[2]//div[2]" position="after">
                    <field name="due_date"/>
                </xpath>

                <xpath expr="//notebook/page[@id='invoice_tab']//field[@name='invoice_outstanding_credits_debits_widget']" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>

                <xpath expr="//group[1]//group[2]//div[@name='journal_div']" position="after">
                    <field name="narration_notes"/>
                </xpath>

                <xpath expr="//group[1]//group[1]//field[@name='ref']" position="after">
                    <field name="company_for_report_id" options='{"always_reload": True, "no_quick_create": True}'/>
                </xpath>

                <!-- <field name="tax_totals_json" position="before">
                    <field name="amount_untaxed_nodiscount" string="รวมเป็นเงิน" attrs="{'invisible': [('move_type', '!=', 'out_invoice')]}"/>
                    <label for="bill_discount" string="ส่วนลด" attrs="{'invisible': [('move_type', '!=', 'out_invoice')]}"/>
                    <div class="d-flex oe_right" attrs="{'invisible': [('move_type', '!=', 'out_invoice')]}">
                        <field class="oe_inline"
                            name="bill_discount_percent"
                        />
                        <span class="oe_inline ml-2 mr-5"> % </span>
                        <field class="oe_right"
                            name="bill_discount"
                        />
                    </div> -->
                    <!-- <field name="amount_untaxed" string="ราคาหลังหักส่วนลด"/>
                    <field name="amount_tax" string="ภาษี"/>
                    <field name="amount_total" string="จำนวนเงินรวมทั้งสิ้น"/> -->
                <!-- </field> -->
            </field>
        </record>

        <record id="view_invoice_tree" model="ir.ui.view">
            <field name="name">account.move.tree.inherit</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_invoice_tree"/>
            <field name="arch" type="xml">

                <xpath expr="//tree//field[@name='invoice_date_due']" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>

                <xpath expr="//tree//field[@name='invoice_date_due']" position="after">
                    <field name="due_date" widget="remaining_days" optional="show"/>
                </xpath>

            </field>
        </record>

        <record id="view_move_line_tree_grouped_sales_purchases_inherit" model="ir.ui.view">
            <field name="name">account.move.line.tree.grouped.sales.purchase.inherit</field>
            <field name="model">account.move.line</field>
            <field name="inherit_id" ref="account.view_move_line_tree_grouped_sales_purchases"/>
            <field name="arch" type="xml">

                <xpath expr="//field[@name='tax_ids']" position="before">
                    <field name="asset_count" optional="show"/>
                </xpath>

            </field>
        </record>


        <record id="view_move_line_tax_audit_tree_inherit" model="ir.ui.view">
            <field name="name">account.move.line.tax.audit.tree.inherit</field>
            <field name="model">account.move.line</field>
            <field name="inherit_id" ref="account.view_move_line_tax_audit_tree"/>
            <field name="arch" type="xml">

                <xpath expr="//field[@name='tax_audit']" position="before">
                    <field name="tax_audit_amount"/>
                </xpath>

            </field>
        </record>

    </data>
</odoo>
