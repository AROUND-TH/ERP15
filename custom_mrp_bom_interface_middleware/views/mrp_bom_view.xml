<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>

        <record id="custom_mrp_bom_form_view" model="ir.ui.view">
            <field name="name">mrp.bom.form</field>
            <field name="model">mrp.bom</field>
            <field name="inherit_id" ref="mrp.mrp_bom_form_view"/>
            <field name="arch" type="xml">
                <xpath expr="/form/*" position="before">
                    <header>
                        <button string="Interface" name="action_interface_middleware" type="object" class="oe_highlight"/>
                    </header>
                </xpath>
            </field>
        </record>
        <record id="custom_mrp_bom_tree_view" model="ir.ui.view">
            <field name="name">mrp.bom.tree</field>
            <field name="model">mrp.bom</field>
            <field name="inherit_id" ref="mrp.mrp_bom_tree_view"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='active']" position="before">
                    <header>
                        <button string="Interface" name="action_interface_middleware" type="object" class="oe_highlight ml-2"/>
                    </header>
                </xpath>
            </field>
        </record>

    </data>
</odoo>
