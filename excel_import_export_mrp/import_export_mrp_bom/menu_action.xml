<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="action_import_mrp_bom_row" model="ir.actions.act_window">
        <field name="name">Import MRP BOM</field>
        <field name="res_model">import.xlsx.wizard</field>
        <field name="binding_view_types">form</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
        <field name="context">
            {
                'template_domain': [('res_model', '=', 'mrp.bom'),
                                    ('fname', '=', 'mrp_bom.xlsx'),
                                    ('gname', '=', False)],
                'default_is_row': True,
            }
        </field>
    </record>
    <menuitem
        id="menu_import_mrp_bom_row"
        parent="mrp.menu_mrp_bom"
        action="action_import_mrp_bom_row"
        sequence="30"
    />
</odoo>
