<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="view_purchase_authentication_form" model="ir.ui.view">
            <field name="name">purchase.authentication.form</field>
            <field name="model">purchase.authentication</field>
            <field name="arch" type="xml">
                <form string="Authentication">
                    <sheet>
                        <div class="oe_title">
                            <h1>
                                <field name="name" invisible="1"/>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="positions_pr_id" options="{'no_create_edit': True}"/>
                                <field name="user_pr_id" options="{'no_create_edit': True}"/>
                            </group>
                            <group>
                                <field name="positions_po_id" options="{'no_create_edit': True}"/>
                                <field name="user_po_id" options="{'no_create_edit': True}"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="view_purchase_authentication_tree" model="ir.ui.view">
            <field name="name">purchase.authentication.tree</field>
            <field name="model">purchase.authentication</field>
            <field name="arch" type="xml">
                <tree string="Authentication" multi_edit="1" sample="1">
                    <field name="user_pr_id"/>
                    <field name="user_po_id"/>
                </tree>
            </field>
        </record>

        <record id="purchase_authentication_action" model="ir.actions.act_window">
            <field name="name">Authentication</field>
            <field name="res_model">purchase.authentication</field>
            <field name="type">ir.actions.act_window</field>
            <field name="view_mode">tree,form</field>
            <field name="view_id" ref="view_purchase_authentication_tree"/>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    No Authentication found. Let's create one!
                </p><p>
                    'Authentication' allow you config level approve.
                </p>
            </field>

        </record>

        <menuitem id="menu_purchase_authentication_action"
            action="purchase_authentication_action" name="Authentication"
            parent="purchase.menu_purchase_config" sequence="5"/>
    </data>
</odoo>
