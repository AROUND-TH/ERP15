<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="view_release_procedure_form" model="ir.ui.view">
            <field name="name">release.procedure.form</field>
            <field name="model">release.procedure</field>
            <field name="arch" type="xml">
                <form string="Release Procedure">
                    <sheet>
                        <div class="oe_title">
                            <h1>
                                <field name="name"/>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="procedure_type"/>
                                <field name="category_ids" widget="many2many_tags"/>
                            </group>
                            <group>
                                <field name="min_amount"/>
                                <field name="condition"/>
                                <field name="max_amount"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Approver Level">
                                <field name="procedure_line_ids">
                                    <tree string="Approver Level" editable="bottom" delete="1" create="1" edit="1">
                                        <field name="approver"/>
                                        <field name="positions_id" options="{'no_create_edit': True}"/>
                                        <field name="position_chk"/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="view_release_procedure_tree" model="ir.ui.view">
            <field name="name">release.procedure.tree</field>
            <field name="model">release.procedure</field>
            <field name="arch" type="xml">
                <tree string="Release Procedure" multi_edit="1" sample="1">
                    <field name="name" decoration-bf="1"/>
                    <field name="procedure_type"/>
                    <field name="category_ids" widget="many2many_tags"/>
                </tree>
            </field>
        </record>

        <record id="release_procedure_action" model="ir.actions.act_window">
            <field name="name">Release Procedure</field>
            <field name="res_model">release.procedure</field>
            <field name="type">ir.actions.act_window</field>
            <field name="view_mode">tree,form</field>
            <field name="view_id" ref="view_release_procedure_tree"/>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    No Release Procedure found. Let's create one!
                </p>
                <p>
                    'Release Procedure' allow you config level approve.
                </p>
            </field>

        </record>

        <menuitem id="menu_release_procedure_action"
            action="release_procedure_action" name="Release Procedure"
            parent="purchase.menu_purchase_config" sequence="5"/>
    </data>
</odoo>
