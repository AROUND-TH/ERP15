<?xml version="1.0" encoding="utf-8" ?>
<odoo>

    <record id="product_category_form_view" model="ir.ui.view">
        <field name="name">product.category.form.inherit.custom_product</field>
        <field name="model">product.category</field>
        <field name="inherit_id" ref="product.product_category_form_view"/>
        <field name="arch" type="xml">
            <group name="first" position="after">
                <group name="material">
                    <group string="Material">
                        <field name="material_id" options="{ 'no_create_edit': True,'no_open': True}"/>
                        <field name="material_sub1_id" options="{ 'no_create_edit': True,'no_open': True}"/>
                        <field name="material_sub2_id" options="{ 'no_create_edit': True,'no_open': True}"
                            attrs="{'readonly': [('material_sub1_id', '=', False)]}"/>
                        <field name="running_digit"/>
                    </group>
                </group>
            </group>
        </field>
    </record>

    
</odoo>
