<?xml version="1.0" encoding="utf-8" ?>
<odoo>

    <record id="product_template_form_view" model="ir.ui.view">
        <field name="name">product.template.form.inherit.product</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_form_view"/>
        <field name="arch" type="xml">
            <field name="categ_id" position="before">
                <field name="is_default_code_from_sequence" invisible="1"/>
            </field>
            <field name="categ_id" position="attributes">
                <attribute name="attrs">{'readonly': [('is_default_code_from_sequence', '=', True)]}</attribute>
            </field>
            <xpath expr="//group[@name='group_standard_price']" position="inside">
                <field name="is_truckscale"/>
            </xpath>
            <xpath expr="//page[@name='inventory']//group[@name='inventory']//group[@name='group_lots_and_weight']//div[@name='weight']" position="after">
                <label for="gross_weight" attrs="{'invisible':[('product_variant_count', '>', 1), ('is_product_variant', '=', False)]}"/>
                <div class="o_row" name="gross_weight" attrs="{'invisible':[('product_variant_count', '>', 1), ('is_product_variant', '=', False)]}">
                    <field name="gross_weight"/>
                    <span><field name="weight_uom_name"/></span>
                </div>
            </xpath>

            <field name="categ_id" position="before">
                <label for="basic_cost" groups="base.group_user" attrs="{'invisible': [('product_variant_count', '&gt;', 1), ('is_product_variant', '=', False)]}"/>
                <div name="standard_price_uom" groups="base.group_user" attrs="{'invisible': [('product_variant_count', '&gt;', 1), ('is_product_variant', '=', False)]}" class="o_row">
                    <field name="basic_cost" widget='monetary' options="{'currency_field': 'cost_currency_id', 'field_digits': True}"/>
                    <span groups="uom.group_uom" class="oe_read_only">per
                        <field name="uom_name"/>
                    </span>
                </div>
                <field name="update_standard_price" invisible="1"/>
            </field>

        </field>
    </record>

    <record id="product_template_only_form_view" model="ir.ui.view">
        <field name="name">product.template.form.inherit.product</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_only_form_view"/>
        <field name="arch" type="xml">
            <field name="default_code" position="before">
                <field name="is_default_code_from_sequence" invisible="1"/>
            </field>
            <field name="default_code" position="attributes">
                <attribute name="attrs">{'readonly': [('is_default_code_from_sequence', '=', True)]}</attribute>
            </field>
        </field>
    </record>

</odoo>
