<?xml version="1.0" encoding="utf-8" ?>
<odoo>

    <record id="product_template_form_view" model="ir.ui.view">
        <field name="name">product.template.form.inherit.product</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_form_view"/>
        <field name="arch" type="xml">
            <field name="categ_id" position="attributes">
                <attribute name="force_save">1</attribute>
                <attribute name="attrs">{'readonly': [('categ_id','!=',False)]}</attribute>
            </field>
            <field name="sale_ok" position="attributes">
                <attribute name="force_save">1</attribute>
                <attribute name="readonly">1</attribute>
            </field>
        </field>
    </record>
    <record id="product_template_form_view_manager" model="ir.ui.view">
        <field name="name">product.template.form.inherit.product_manager</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product_template_form_view"/>
        <field name="groups_id" eval="[(6, 0, [ref('base.group_system')])]"/>
        <field name="arch" type="xml">
            <field name="categ_id" position="attributes">
                <attribute name="attrs">{'readonly': False}</attribute>
            </field>
            <field name="sale_ok" position="attributes">
                <attribute name="readonly">0</attribute>
            </field>
        </field>
    </record>

    <record id="product_template_only_form_view" model="ir.ui.view">
        <field name="name">product.template.form.inherit.product</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_only_form_view"/>
        <field name="arch" type="xml">
            <field name="default_code" position="attributes">
                <attribute name="force_save">1</attribute>
                <attribute name="readonly">1</attribute>
            </field>
        </field>
    </record>
    <record id="product_template_only_form_view_manager" model="ir.ui.view">
        <field name="name">product.template.form.inherit.product_manager</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product_template_only_form_view"/>
        <field name="groups_id" eval="[(6, 0, [ref('base.group_system')])]"/>
        <field name="arch" type="xml">
            <field name="default_code" position="attributes">
                <attribute name="readonly">0</attribute>
            </field>
        </field>
    </record>

</odoo>
