<odoo>
  <record id="wizard_success_message_view_form" model="ir.ui.view">
      <field name="name">Wizard Success Message</field>
      <field name="model">wizard.success.message</field>
      <field name="arch" type="xml">
          <form>
              <field name="message" readonly="True"/>
              <footer>
                  <button name="action_close" string="Ok" type="object" default_focus="1" class="oe_highlight"/>
              </footer>
          </form>
      </field>
  </record>
</odoo>