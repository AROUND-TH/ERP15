<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>

        <record id="view_picking_type_form" model="ir.ui.view">
            <field name="name">stock.picking.type.form</field>
            <field name="model">stock.picking.type</field>
            <field name="inherit_id" ref="stock.view_picking_type_form"/>
            <field name="arch" type="xml">
                <xpath expr="//form[1]/sheet[1]/group[1]" position="after">
                    <group name="truckscale_options" string="Truckscale">
                        <group>
                            <field name="interface_truckscale_data"/>
                            <field name="set_done_by_weight" attrs="{'invisible': [('interface_truckscale_data', '!=', True)]}"/>
                        </group>
                        <group>
                            <field name="show_truckscale_data"/>
                        </group>
                    </group>
                </xpath>

            </field>
        </record>

    </data>
</odoo>
