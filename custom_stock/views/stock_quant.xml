<?xml version="1.0" encoding="utf-8" ?>
<odoo>

    <record id="view_stock_quant_tree_inventory_editable" model="ir.ui.view">
        <field name="name">stock.quant.form.inherit_stock</field>
        <field name="model">stock.quant</field>
        <field name="inherit_id" ref="stock.view_stock_quant_tree_inventory_editable"/>
        <field name="arch" type="xml">
            <field name="quantity" position="before">
                <field name="product_weight"/>
                <field name="product_gross_weight"/>
            </field>
            <xpath expr="//button[@name='action_apply_inventory']" position="attributes">
                <attribute name="groups">account.group_account_manager</attribute>
            </xpath>
        </field>
    </record>

    <record id="view_stock_quant_tree_editable" model="ir.ui.view">
        <field name="name">stock.quant.form.inherit_stock</field>
        <field name="model">stock.quant</field>
        <field name="inherit_id" ref="stock.view_stock_quant_tree_editable"/>
        <field name="arch" type="xml">
            <field name="location_id" position="attributes">
                <attribute name="optional">show</attribute>
            </field>
            <field name="lot_id" position="attributes">
                <attribute name="optional">show</attribute>
            </field>
            <field name="inventory_quantity_auto_apply" position="before">
                <field name="alert_date" optional="show" widget="remaining_days"/>
                <field name="expiration_date" optional="show" widget="remaining_days"/>
                <field name="product_weight" optional="hide"/>
                <field name="product_gross_weight" optional="hide"/>
            </field>
        </field>
    </record>

    <record id="view_stock_quant_tree_editable_expiry" model="ir.ui.view">
        <field name="name">stock.quant.inherit.form</field>
        <field name="model">stock.quant</field>
        <field name="inherit_id" ref="product_expiry.view_stock_quant_tree_editable_expiry"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='removal_date']" position="attributes">
                <attribute name="widget">remaining_days</attribute>
            </xpath>
        </field>
    </record>

    <record id="quant_search_view" model="ir.ui.view">
        <field name="name">stock.quant.search.inherit_stock</field>
        <field name="model">stock.quant</field>
        <field name="inherit_id" ref="stock.quant_search_view"/>
        <field name="arch" type="xml">
            <xpath expr="//filter[@name='locationgroup']" position="after">
                <filter string="Category" name="product_category_group" context="{'group_by': 'product_categ_id'}"/>
            </xpath>
        </field>
    </record>

</odoo>
