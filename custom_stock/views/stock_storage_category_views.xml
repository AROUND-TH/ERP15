<?xml version="1.0" encoding="utf-8" ?>
<odoo>

    <record id="stock_storage_category_tree" model="ir.ui.view">
        <field name="name">stock.storage.category.tree.inherit_custom_stock</field>
        <field name="model">stock.storage.category</field>
        <field name="inherit_id" ref="stock.stock_storage_category_tree"/>
        <field name="arch" type="xml">
            <field name="allow_new_product" position="after">
                <field name="used_percent" widget="progressbar"/>
                <field name="capacity_type"/>
            </field>
        </field>
    </record>

    <record id="stock_storage_category_form" model="ir.ui.view">
        <field name="name">stock.storage.category.form.inherit_custom_stock</field>
        <field name="model">stock.storage.category</field>
        <field name="inherit_id" ref="stock.stock_storage_category_form"/>
        <field name="arch" type="xml">
            <xpath expr="//sheet/group/group[2]" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
            <xpath expr="//sheet/group" position="inside">
                <group>
                    <field name="capacity_type" widget="radio" options="{'horizontal': true}" invisible="1"/>
                    <label for="max_weight" attrs="{'invisible': [('capacity_type', '!=', 'kg')]}"/>
                    <div class="o_row" attrs="{'invisible': [('capacity_type', '!=', 'kg')]}">
                        <field name="max_weight"/>
                        <span>kg</span>
                    </div>
                    <label for="max_pallet" attrs="{'invisible': [('capacity_type', '!=', 'pallet')]}"/>
                    <div class="o_row" attrs="{'invisible': [('capacity_type', '!=', 'pallet')]}">
                        <field name="max_pallet"/>
                        <span>Pallet</span>
                    </div>
                    <label for="used"/>
                    <div class="o_row">
                        <field name="used"/>
                        <span attrs="{'invisible': [('capacity_type', '!=', 'kg')]}">kg</span>
                        <span attrs="{'invisible': [('capacity_type', '!=', 'pallet')]}">Pallet</span>
                    </div>
                    <field name="used_percent" widget="progressbar"/>
                </group>
            </xpath>
            <xpath expr="//page[@name='package_capacity']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
        </field>
    </record>

</odoo>
