<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="view_credit_message_error_form" model="ir.ui.view">
            <field name="name">credit.message.error.form</field>
            <field name="model">credit.message.error</field>
            <field name="arch" type="xml">
                <form string="Set Message Error">
                    <sheet>
                        <div class="oe_title">
                            <h1>
                                <field name="name"/>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="error_type"/>
                                <field name="message_th"/>
                            </group>
                            <group>
                                <field name="user_id" options="{'no_create_edit': True}"/>
                                <field name="message_en"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="view_credit_message_error_tree" model="ir.ui.view">
            <field name="name">credit.message.error.tree</field>
            <field name="model">credit.message.error</field>
            <field name="arch" type="xml">
                <tree string="Authentication" multi_edit="1" sample="1">
                    <field name="name"/>
                    <field name="user_id"/>
                    <field name="error_type"/>
                    <field name="message_th"/>
                    <field name="message_en"/>
                </tree>
            </field>
        </record>

        <record id="credit_message_error_action" model="ir.actions.act_window">
            <field name="name">Set Message Error</field>
            <field name="res_model">credit.message.error</field>
            <field name="type">ir.actions.act_window</field>
            <field name="view_mode">tree,form</field>
            <field name="view_id" ref="view_credit_message_error_tree"/>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    No Message Error found. Let's create one!
                </p><p>
                    'Message Error' Setup your message error for the alert to users.
                </p>
            </field>

        </record>

        <menuitem id="menu_credit_message_error_action"
            action="credit_message_error_action" name="Set Message Error"
            parent="sale.menu_sale_config" sequence="6"/>
    </data>
</odoo>
