<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="wizard_consumption_stock_move_form_view" model="ir.ui.view">
        <field name="name">wizard.consumption.stock.move.form.view</field>
        <field name="model">wizard.consumption.stock.move</field>
        <field name="arch" type="xml">
            <form string="Consumption">
                <sheet>
                    <group>
                        <field name="doc_id" invisible="1" force_save="1" />
                        <field name="mrp_production_id" invisible="1" force_save="1"/>
                        <field name="name" invisible="1" force_save="1"/>
                        
                    </group>
                    <group>
                        <field name="consumption_stock_move_line_ids" nolabel="1" readonly="1" force_save="1">
                            <tree >
                                <field name="move_id" invisible="1" force_save="1"/>
                                <field name="product_id"/>
                                <field name="product_uom_qty"/>
                                <field name="location_id"/>
                                <field name="location_dest_id"/>
                                <field name="lot_id"/>
                                <field name="quantity_done"/>
                                <field name="product_uom"/>
                                <field name="tracking"/>
                            </tree>
                        </field>
                    </group>
                </sheet>
                <footer>
                    <button name="action_confirm" string="Confirm" colspan="1" type="object" class="btn-primary"/>
                    <button string="Discard" class="btn-secondary" special="cancel" />
                </footer>
            </form>
        </field>
    </record>
    
    <record id="wizard_consumption_stock_move_action" model="ir.actions.act_window">
		<field name="name">Consumption Action</field>
		<field name="res_model">wizard.consumption.stock.move</field>
		<field name="view_mode">form</field>
		<field name="target">new</field>
	</record>
</odoo>