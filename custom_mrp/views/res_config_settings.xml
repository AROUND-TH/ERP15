<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="res_config_settings_view_form_inherit" model="ir.ui.view">
        <field name="name">res.config.setting.view.form.inherit.middleware.uri</field>
        <field name="priority" eval="200"/>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="base_setup.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@name='integration']" position="after">
                <div name="middleware_api_uri">
                    <h2>Middleware API</h2>
                    <div class="row mt16 o_settings_container">
                        <div class="col-sx-12 col-md-6 o_setting_box">
                            <div class="content-group">
                                <div class="mt16">
                                    <label for="middleware_api_uri" string="Middleware API URI"/>
                                    <field name="middleware_api_uri"/>
                                </div>
                                <div class="mt16">
                                    <label for="middleware_api_username" string="API Username"/>
                                    <field name="middleware_api_username"/>
                                </div>
                                <div class="mt16">
                                    <label for="middleware_api_password" string="API Password"/>
                                    <field name="middleware_api_password" password="True"/>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>