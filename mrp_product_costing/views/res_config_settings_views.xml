<?xml version="1.0" encoding="utf-8"?>

<odoo>
    <record id="res_config_settings_view_form" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.mrp.product.costing</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="mrp.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@data-key='mrp']" position="inside">
                <h2>Default Journal Production Costs</h2>
                <div class="row mt16 o_settings_container">
                    <div class="col-12 col-lg-6 o_setting_box">
                        <div class="o_setting_left_panel"/>
                        <div class="o_setting_right_pane">
                            <span class="o_form_label">The following accounts are used for default journal postings:</span>
                            <div class="content-group">
                                <div class="row mt8">
                                    <label for="journal_production_cost_account_id" class="col-lg-5 o_light_label"/>
                                    <field name="journal_production_cost_account_id" required="True"/>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <h2>MRP Product Costing</h2>
                <div class="row mt16 o_settings_container">
                    <div class="col-12 col-lg-6 o_setting_box">
                        <div class="o_setting_left_panel"/>
                        <div class="o_setting_right_pane">
                            <span class="o_form_label">The following accounts are used for direct cost postings:</span>
                            <div class="content-group">
                                <div class="row mt8">
                                    <label for="labour_cost_account_id" class="col-lg-5 o_light_label"/>
                                    <field name="labour_cost_account_id" required="True"/>
                                </div>
                                <div class="row mt8">
                                    <label for="machine_run_cost_account_id" class="col-lg-5 o_light_label"/>
                                    <field name="machine_run_cost_account_id" required="True"/>
                                </div>
                                <div class="row mt8">
                                    <label for="labour_fixed_cost_account_id" class="col-lg-5 o_light_label"/>
                                    <field name="labour_fixed_cost_account_id" required="True"/>
                                </div>
                                <div class="row mt8">
                                    <label for="machine_run_fixed_cost_account_id" class="col-lg-5 o_light_label"/>
                                    <field name="machine_run_fixed_cost_account_id" required="True"/>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-12 col-lg-6 o_setting_box">
                        <div class="o_setting_left_panel"/>
                        <div class="o_setting_right_pane">
                            <span class="o_form_label">The following accounts are used for variances cost postings:</span>
                            <div class="content-group">
                                <div class="row mt8">
                                    <label for="planned_variances_account_id" class="col-lg-5 o_light_label"/>
                                    <field name="planned_variances_account_id" required="True"/>
                                </div>
                                <div class="row mt8">
                                    <label for="material_variances_account_id" class="col-lg-5 o_light_label"/>
                                    <field name="material_variances_account_id" required="True"/>
                                </div>
                                <div class="row mt8">
                                    <label for="other_variances_account_id" class="col-lg-5 o_light_label"/>
                                    <field name="other_variances_account_id" required="True"/>
                                </div>
                                <div class="row mt8">
                                    <label for="other_fixed_account_id" class="col-lg-5 o_light_label"/>
                                    <field name="other_fixed_account_id" required="True"/>
                                </div>
                            </div>
                            <span class="o_form_label">Journal for collecting manufacturing accounting postings:</span>
                            <div class="content-group">
                                <div class="row mt8">
                                    <label for="manufacturing_journal_id" class="col-lg-5 o_light_label"/>
                                    <field name="manufacturing_journal_id" required="True"/>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
     </record>
</odoo>
