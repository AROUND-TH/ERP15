<odoo>
    <!--form-->
    <record id="wizard_schedule_delivery" model="ir.ui.view">
        <field name="name">wizard.schedule.delivery</field>
        <field name="model">schedule.delivery</field>
        <field name="arch" type="xml">
            <form string="Wizard Form">
                <label for="product_id" string="Product&#160;:&#160;"/>
                <field name="product_id"/>
                <br/>
                <label for="total_qty" string="Order Quantity&#160;:&#160;"/>
                <field name="total_qty"/>
                <field name="sale_line_id" invisible="1"/>
                <field name='schedule_delivery_ids'>
                    <tree editable='bottom'>
                        <field name='date' string="Delivery Date"/>
                        <field name='qty' sum="Quantity"/>
                    </tree>
                </field>
                <footer>
                    <button string="Update" name="update_values" type="object" class="oe_highlight"/>
                    <button string="Close Window" class="oe_link" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
    <!--action-->
    <record id="wizard_delivery_action" model="ir.actions.act_window">
        <field name="name">Schedule Delivery Dates</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">schedule.delivery</field>
        <field name="view_mode">form</field>
        <field name="context">{'default_sale_line_id': active_id}</field>
        <field name="view_id" ref="wizard_schedule_delivery"/>
        <field name="target">new</field>
    </record>
</odoo>